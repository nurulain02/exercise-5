import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class RainfallDataCreation {
    public static void main(String[] args) {
        String fileName = "rainfall_data.dat";

        try (DataOutputStream dos = new DataOutputStream(new FileOutputStream(fileName))) {
            double[] rainfallData = {10.5, 15.2, 8.7, 12.1, 9.8, 14.3};

            for (double rainfall : rainfallData) {
                dos.writeDouble(rainfall);
            }

            System.out.println("Data creation completed.");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}

public class RainfallDataConsumption {
    public static void main(String[] args) {
        String fileName = "rainfall_data.dat";

        try (DataInputStream dis = new DataInputStream(new FileInputStream(fileName))) {
            double[] rainfallData = new double[6];
            double totalRainfall = 0;

            for (int i = 0; i < 6; i++) {
                rainfallData[i] = dis.readDouble();
                totalRainfall += rainfallData[i];
            }

            double averageRainfall = totalRainfall / 6;

            System.out.println("6-Day Rainfall Data:");
            for (int i = 0; i < 6; i++) {
                System.out.println("Day " + (i + 1) + ": " + rainfallData[i]);
            }

            System.out.println("Average Rainfall: " + averageRainfall);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
